# Configuration de production - Copiez ce fichier vers .env et remplissez les valeurs

# Configuration Flask
SECRET_KEY=your-super-secret-key-here
FLASK_ENV=production

# Base de données (fournie automatiquement par Railway)
DATABASE_URL=postgresql://user:password@host:port/database

# Configuration email (pour les notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Configuration Stripe (à obtenir sur dashboard.stripe.com)
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Configuration de l'application
ADMIN_EMAIL=admin@classesnumeriques.com
APP_NAME=Classe Numérique Secondaire
